{
  "name": "serverless-typescript-boilerplate",
  "version": "1.0.0",
  "description": "Serverless aws-nodejs-typescript boilerplate",
  "main": "serverless.ts",
  "scripts": {
    "start": "serverless offline --httpPort=4000",
    "deploy:staging": "serverless deploy --aws-profile personal --stage staging",
    "deploy:production": "serverless deploy --aws-profile personal --stage production",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --coverage",
    "lint": "eslint '*/**/*.{js,ts}'",
    "prettier": "prettier --write '*/**/*.{js,ts}'",
    "docs": "redoc-cli serve docs/openapi/openapi.yml",
    "docs:watch": "redoc-cli serve docs/openapi/openapi.yml --watch"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@middy/core": "^4.0.0",
    "@middy/http-json-body-parser": "^4.0.0",
    "source-map-support": "^0.5.19"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@serverless/typescript": "^3.21.0",
    "@types/aws-lambda": "^8.10.64",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "commitlint": "^17.3.0",
    "eslint": "^8.29.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^4.2.1",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "jest": "^29.3.1",
    "json-schema-to-ts": "^2.6.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.2.1",
    "redoc-cli": "^0.13.2",
    "serverless": "3.25.1",
    "serverless-offline": "^12.0.0",
    "serverless-plugin-aws-alerts": "^1.7.4",
    "serverless-plugin-canary-deployments": "^0.8.0",
    "serverless-prune-plugin": "^2.0.1",
    "serverless-stage-manager": "^1.0.5",
    "serverless-webpack": "^5.2.0",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.0.5",
    "webpack": "^5.4.0",
    "webpack-node-externals": "^3.0.0"
  },
  "author": "André Brandão",
  "license": "MIT"
}
